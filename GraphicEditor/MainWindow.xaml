<Window x:Class="GraphicEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Toolbar -->
        <ToolBar Grid.Row="0">
            <ComboBox x:Name="cmbTools" Width="100" SelectedIndex="0" SelectionChanged="EventNewFigureSelected">
            </ComboBox>

            <StackPanel Margin="10" Orientation="Horizontal">
                <Label Content="Fill color     "></Label>
                <ComboBox x:Name="cbFillColor" 
              SelectedIndex="0" Width="100">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <Rectangle Width="50" 
                       Height="20" 
                       Fill="{Binding}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>


            </StackPanel>
            <Separator/>

            <StackPanel Orientation="Horizontal">
                <Label Content="Color:"/>
                <Rectangle x:Name="colorPreview" 
                         Width="20" 
                         Height="20" 
                         Stroke="Black"
                         Margin="5,0"/>
                <Button x:Name="btnColorPicker" 
                        Content="..." 
                        Margin="5,0"/>
            </StackPanel>

            <Separator/>

            <StackPanel Orientation="Horizontal">
                <Label Content="Size:"/>
                <Slider x:Name="brushSizeSlider" 
                        Minimum="1" 
                        Maximum="50" 
                        Value="5"
                        Width="100"/>
            </StackPanel>
        </ToolBar>

        <!-- Drawing Area -->
        <Canvas x:Name="myCanvas" 
                Grid.Row="1" 
                Background="White" MouseDown="EventStartDraw" MouseUp="EventEndDraw"/>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="statusText">Ready</TextBlock>
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
