<UserControl x:Class="GraphicEditor.Controls.ColorPickerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GraphicEditor"
             Width="300" Height="150">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Gradient Area -->
        <Canvas x:Name="ColorCanvas" Grid.Row="0"
                MouseDown="ColorCanvas_MouseDown"
                MouseMove="ColorCanvas_MouseMove"
                MouseUp="ColorCanvas_MouseUp">
            <Rectangle x:Name="GradientRect" Width="250" Height="100">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop x:Name="SelectedHueStop" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Canvas>

        <!-- Hue Slider -->
        <Slider x:Name="HueSlider" Grid.Row="1" Minimum="0" Maximum="360"
                Margin="10" ValueChanged="HueSlider_ValueChanged">
            <Slider.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#FF0000" Offset="0"/>
                    <GradientStop Color="#FF00FF" Offset="0.16"/>
                    <GradientStop Color="#0000FF" Offset="0.33"/>
                    <GradientStop Color="#00FFFF" Offset="0.5"/>
                    <GradientStop Color="#00FF00" Offset="0.66"/>
                    <GradientStop Color="#FFFF00" Offset="0.83"/>
                    <GradientStop Color="#FF0000" Offset="1"/>
                </LinearGradientBrush>
            </Slider.Background>
        </Slider>
    </Grid>
</UserControl>